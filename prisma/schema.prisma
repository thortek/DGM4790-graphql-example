generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Instructor {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  courses Course[]
}

model Course {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  description   String
  defaultCredits String
  courseCode  String
  // termsOffered String[]
  instructor    Instructor?    @relation(fields: [instructorId], references: [id])
  instructorId  Int?
}
